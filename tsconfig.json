{
  "compilerOptions": {
    
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "importHelpers": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "esm",

    // Transpile to Node-14 compatible JS
    "allowSyntheticDefaultImports": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2020"
    
  },
  "include": [
    "src/**.*" 
  ]
}